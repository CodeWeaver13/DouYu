<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <RelativeLayout
            android:id="@+id/popup_anima"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wh222.0dimens222.0dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_cancler"
                android:layout_width="@dimen/wh20.0dimens20.0dp"
                android:layout_height="@dimen/wh20.0dimens20.0dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/wh10.0dimens10.0dp"
                android:layout_marginTop="@dimen/wh10.0dimens10.0dp"
                android:src="@mipmap/error" />

            <TextView
                android:id="@+id/tv_buy_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="33dp"
                android:text="购买数量"

                android:textSize="15sp" />

            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:id="@+id/ll_buy_num"
               android:layout_marginLeft="@dimen/wh28.0dimens28.0dp"
                android:layout_marginRight="@dimen/wh28.0dimens28.0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_buy_num"
                android:layout_marginTop="@dimen/wh28.0dimens28.0dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_jian_num"
                    android:layout_marginTop="@dimen/wh10.0dimens10.0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/jian" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <TextView
                    android:numeric="integer"
                    android:layout_marginTop="@dimen/wh8.0dimens8.0dp"
                    android:id="@+id/et_buy_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="1" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_jia_num"
                    android:layout_marginTop="@dimen/wh10.0dimens10.0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/jia" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_begin_award"
                android:layout_marginBottom="@dimen/wh36.0dimens36.0dp"
                android:text="去抽奖"
                android:background="@drawable/integraletail_button"
                android:paddingLeft="@dimen/wh23.0dimens23.0dp"
                android:paddingRight="@dimen/wh23.0dimens23.0dp"
                android:paddingTop="@dimen/wh6.0dimens6.0dp"
                android:paddingBottom="@dimen/wh6.0dimens6.0dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_above="@id/popup_anima"
        android:id="@+id/click_to_dismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </RelativeLayout>

</RelativeLayout>