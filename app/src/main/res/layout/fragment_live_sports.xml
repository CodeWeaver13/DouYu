<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:xrefreshview="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
  <com.team.zhuoke.ui.refreshview.XRefreshView
      android:id="@+id/rtefresh_content"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      xrefreshview:autoLoadMore="true"
      >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/livesports_content_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
  </com.team.zhuoke.ui.refreshview.XRefreshView>
</LinearLayout>