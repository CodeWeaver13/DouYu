<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xrefreshview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/iv_empty_icon"
                    android:layout_width="@dimen/wh70.0dimens70.0dp"
                    android:layout_height="@dimen/wh70.0dimens70.0dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/live_often_empty_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_empty_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/wh25.0dimens25.0dp"
                    android:text="你经常观看的栏目会出现在这儿~"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </RelativeLayout>

        </RelativeLayout>

    </FrameLayout>
</LinearLayout>