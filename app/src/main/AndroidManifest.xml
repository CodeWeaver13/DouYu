<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.team.zhuoke"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar.AppBaseTheme">
        <activity
            android:name=".view.common.activity.MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <!-- 适配规格 -->
        <meta-data
            android:name="design_width"
            android:value="1080">
        </meta-data>
        <meta-data
            android:name="design_height"
            android:value="1920">
        </meta-data>

        <activity
            android:name=".view.common.activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.common.activity.GuideActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
